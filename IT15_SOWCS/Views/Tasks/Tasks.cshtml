@{
    ViewData["Title"] = "My Tasks";
    Layout = "_TasksLayout";
}

<div class="tasks-container">
    <div class="tasks-header">
        <div class="tasks-title">
            <h2>My Tasks</h2>
            <p>Track and manage your assigned tasks</p>
        </div>
    </div>

    <div class="row g-3 mb-5">
        <div class="col-md-7">
            <div class="col-md-9">
                <div class="search-wrapper shadow-sm">
                    <i class="bi bi-search text-muted"></i>
                    <input type="text" placeholder="Search projects...">
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <select class="form-select custom-select">
                <option selected>All Status</option>
                <option>Pending</option>
                <option>In Progress</option>
                <option>Completed</option>
            </select>
        </div>
        <div class="col-md-2">
            <select class="form-select custom-select">
                <option selected>All Priority</option>
                <option>High</option>
                <option>Medium</option>
                <option>Low</option>
            </select>
        </div>
    </div>

    <div class="empty-state-wrapper d-flex flex-column align-items-center justify-content-center">
        <div class="icon-circle mb-3">
            <i class="bi bi-clipboard-check text-muted fs-2"></i>
        </div>
        <h4 class="fw-bold mb-1">No tasks found</h4>
        <p class="text-muted">You don't have any tasks assigned yet</p>
    </div>
</div>