<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Syncora</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --syncora-dark: #292d34;
            --syncora-blue: #7b68ee; 
        }

        body {
            font-family: 'Inter', -apple-system, sans-serif;
            background-color: #ffffff;
        }

        .navbar {
            padding: 0.8rem 2rem;
            background-color: white !important;
        }

        .navbar-brand img {
            height: 32px;
            margin-right: 10px;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            letter-spacing: -0.5px;
            color: var(--syncora-dark) !important;
        }

        .nav-link {
            font-weight: 500;
            color: #4a4a4a !important;
            margin: 0 10px;
        }

            .nav-link:hover {
                color: var(--syncora-blue) !important;
            }

        .btn-syncora {
            background-color: var(--syncora-dark);
            color: white;
            border-radius: 8px;
            padding: 8px 20px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-syncora:hover {
                background-color: #000;
                color: white;
                transform: translateY(-1px);
            }

        footer {
            background: #f9f9f9;
            padding: 2rem 0;
            margin-top: 4rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/SOWCS.png" alt="Syncora Logo" />
                    <span>Syncora</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="d-flex align-items-center ms-auto">
                        <partial name="_LoginPartial" />
                        <a class="btn btn-syncora ms-3" href="#">Get Started</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 100px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted">
        <div class="container text-center">
            <p>&copy; 2026 - <strong>Syncora</strong> - Syncora Office Workflow & Collaboration System</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>